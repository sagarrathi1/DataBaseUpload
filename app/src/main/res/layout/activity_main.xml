<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <Spinner
                    android:id="@+id/onemorespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtypespinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/typespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brandspinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/cate"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/productspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="RC Code"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="78dp"
                    android:layout_height="117dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:onClick="select"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="78dp"
                    android:layout_height="117dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:onClick="select1"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="78dp"
                    android:layout_height="117dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView1"
                    android:onClick="select2"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="78dp"
                    android:layout_height="117dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_marginTop="0dp"
                    android:onClick="select3"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <EditText
                    android:id="@+id/fees"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/cate"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Item_Code"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fees"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Catalogue Code"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/contact"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="Item_Name"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/time"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fname"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/emergency"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/location"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Specification"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/DiscountPrice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:onClick="save"
                    android:text="Save" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/time"
                    android:layout_alignParentStart="true"
                    android:ems="10"
                    android:hint="sold by"
                    android:inputType="textPersonName" />



                <EditText
                    android:id="@+id/color"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/emergency"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Colour"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/Type"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/color"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Type"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/FinishType"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Type"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Finish Type"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/Size"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/FinishType"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Size"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/Description"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Size"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Description"
                    android:inputType="textPersonName" />



                <EditText
                    android:id="@+id/Material"
                    android:layout_width="400dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Description"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Material"
                    android:inputType="textPersonName" />









                <EditText
                    android:id="@+id/DelivaryTime"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Material"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Delivary Time"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/DelivaryCharge"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/DelivaryTime"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Delivary Charge"
                    android:inputType="textPersonName" />



                <EditText
                    android:id="@+id/DiscountPrice"
                    android:layout_width="400dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/DelivaryCharge"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Discount Price"
                    android:inputType="textPersonName" />





                <Spinner
                    android:id="@+id/mainspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/subspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/brandspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/productspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtypespinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/subtypespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typespinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />


            </RelativeLayout>>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>