<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <Spinner
                    android:id="@+id/onemorespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtypespinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/typespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brandspinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/cate"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/productspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="RC Code"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:onClick="select"
                    app:srcCompat="@android:drawable/btn_star_big_on" />


                <EditText
                    android:id="@+id/fees"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/cate"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Item_Code"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fees"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Catalogue Code"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/contact"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="Item_Name"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/time"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fname"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/emergency"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/time"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Specification"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:onClick="save"
                    android:text="Save" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/emergency"
                    android:layout_alignParentStart="true"
                    android:ems="10"
                    android:hint="sold by"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/mainspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/subspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/brandspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subspinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/productspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtypespinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/subtypespinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typespinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp" />


            </RelativeLayout>>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>